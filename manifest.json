{
  "name": "No views on twitter",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Hides the views count on twitter",
  "homepage_url": "http://kitze.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["*://*.twitter.com/"],
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}